<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#979aef"
    tools:context="com.example.administrator.nodejssocketio.MainActivity">

    <Button
        android:text="Sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonSent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Noi dung..."
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonRegister"
        android:layout_toEndOf="@+id/buttonRegister"
        android:id="@+id/editTextNoiDung" />

    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegister"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonSent"
        android:layout_toEndOf="@+id/buttonSent" />

    <ListView

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ff00"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:dividerHeight="10.0sp"
        android:id="@+id/lvStatus" />

    <ListView
        android:background="#f1f1c1"
        android:dividerHeight="15.0sp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/lvStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lvMess" />

</RelativeLayout>
